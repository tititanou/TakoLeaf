@model List<TakoLeaf.ViewModels.UtilisateurViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    <style type="text/css">

        table, th, td {
            border: solid, 1px;
            border-color: #96D4D4;
        }
    </style>

</head>
<body>
    <div style="text-align:center">
        <h1>Bienvenue sur le gestionnaire de compte</h1>
    </div>

    <h2 style="text-align:center; font-family:sans-serif">Vue d'ensemble adhérent</h2>

    <div style="position:center">
        <table>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Description</th>
                <th>Mail</th>
                <th>Etat du profil</th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td>@item.Adherent.Nom</td>
            <td>@item.Adherent.Prenom</td>
            <td>@item.CompteUser.Description</td>
            <td>@item.CompteUser.Mail</td>
            <td>@item.CompteUser.EtatProfil</td>
            <td>@Html.ActionLink("Supprimer Profil", "SupprimerCompte", "Admin", new { id = item.CompteUser.AdherentId })</td>
        </tr>
            }

        </table>
    </div>

    <h3>Nombre d'adhérent actuel : <p style="color:crimson">@Model.Count</p></h3> <br />

    <br />

    <h2 style="text-align:center; font-family:sans-serif;">Comptes en attente de validation</h2>

    <div style="position:center">
        <table>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Description</th>
                <th>Mail</th>
                <th>Etat du profil</th>
            </tr>

            @{ int count = 0;}


            @foreach (var item in Model)
            {


                if (item.CompteUser.EtatProfil == TakoLeaf.Models.EtatProfil.NON_VALIDE || item.CompteUser.EtatProfil == TakoLeaf.Models.EtatProfil.ATTENTE_VALIDATION)
                {

                    string editLink = "/Admin/ValiderProfil?id=" + item.CompteUser.AdherentId;
                    string editLink1 = "/Admin/BloquerProfil?id=" + item.CompteUser.AdherentId;

                    <tr>
                        <td>@item.Adherent.Nom</td>
                        <td>@item.Adherent.Prenom</td>
                        <td>@item.CompteUser.Description</td>
                        <td>@item.CompteUser.Mail</td>
                        <td>@item.CompteUser.EtatProfil</td>
                        @*<td>@Html.ActionLink("Valider Profil", "ValiderProfil", "Admin", new { id = item.CompteUser.AdherentId })  </td>*@
                        <td><a href="@editLink">Valider le profil</a></td>
                        <td><a href="@editLink1">Bloquer le compte</a></td>
                    </tr>

                    count++;
                }
            }

        </table>
    </div>

    <h3>Comptes nécessitant une validation de profil : <p style="color:crimson">@count</p></h3><br />

    <h2 style="text-align:center; font-family:sans-serif;">Comptes bloqués</h2>

    @{count = 0;}

    <div style="position:center">
        <table>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Description</th>
                <th>Mail</th>
                <th>Etat du profil</th>
            </tr>

            @foreach (var item in Model)
            {


                if (item.CompteUser.EtatProfil == TakoLeaf.Models.EtatProfil.COMPTE_BLOQUE)
                {


                    string editLink3 = "/Admin/DebloquerProfil?id=" + item.CompteUser.AdherentId;

        <tr>
            <td>@item.Adherent.Nom</td>
            <td>@item.Adherent.Prenom</td>
            <td>@item.CompteUser.Description</td>
            <td>@item.CompteUser.Mail</td>
            <td>@item.CompteUser.EtatProfil</td>
            <td>@Html.ActionLink("Débloquer Profil", "DebloquerProfil", "Admin", new { id = item.CompteUser.AdherentId })</td>
        </tr>

                    count++;

                }
            }


        </table>
    </div>
    <h3>Nombre de comptes bloqués : <p style="color:crimson">@count</p></h3><br />



</body>
</html>
