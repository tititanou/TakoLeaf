            <tr class="donnees">
                @{string editLink1 = "/Admin/AfficherProfil?id=" + item.AdherentId; }
                @if (item.Avatar != null)
                {
                    <td><a href="@editLink1"><img class="avatar" src="~/Avatar/@item.Avatar" /></a></td>
                }
                else
