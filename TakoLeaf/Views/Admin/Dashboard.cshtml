@model List<TakoLeaf.ViewModels.UtilisateurViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    <style type="text/css">

        table, th, td {
            border: solid, 1px;
            border-color: #96D4D4;
        }
    </style>

</head>
<body>
    <div style="text-align:center">
        <h1>Welcome to the DashBoard</h1>
    </div>
    <h3>Tableau de bord Adhérents</h3>
    <table style="text-align:center">
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Description</th>
            <th>Mail</th>
            <th>Etat du profil</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Adherent.Nom</td>
                <td>@item.Adherent.Prenom</td>
                <td>@item.CompteUser.Description</td>
                <td>@item.CompteUser.Mail</td>
                <td>@item.CompteUser.EtatProfil</td>
            </tr>
        }

    </table>

    <h3>Nombre d'adhérent actuel : @Model.Count</h3> <br />

    <br />

    <table>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Description</th>
            <th>Mail</th>
            <th>Etat du profil</th>
        </tr>

        @{ int count = 0;}


        @foreach (var item in Model)
        {


            if (item.CompteUser.EtatProfil == TakoLeaf.Models.EtatProfil.NON_VALIDE || item.CompteUser.EtatProfil == TakoLeaf.Models.EtatProfil.ATTENTE_VALIDATION)
            {

                string editLink = "/Admin/ValiderProfil?id=" + item.CompteUser.AdherentId;

                <tr>
                    <td>@item.Adherent.Nom</td>
                    <td>@item.Adherent.Prenom</td>
                    <td>@item.CompteUser.Description</td>
                    <td>@item.CompteUser.Mail</td>
                    <td>@item.CompteUser.EtatProfil</td>
                    @*<td>@Html.ActionLink("Valider Profil", "ValiderProfil", "Admin", new { id = item.CompteUser.AdherentId })  </td>*@
                    <td><a href ="@editLink">Valider le profil</a></td>
                </tr>

                count++;
            }
        }

    </table>

    <h3>Comptes nécessitant une validation de profil : @count</h3>


</body>
</html>
