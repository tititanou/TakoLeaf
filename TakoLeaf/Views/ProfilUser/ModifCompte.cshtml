@model TakoLeaf.Models.CompteUser
@{
    Layout = "_LayoutConnecte";
    ViewBag.Title = "Modification Compte";

}

<link rel="stylesheet" href="~/CSS/Actualitest.css" />
<link rel="stylesheet" href="~/CSS/Zoutils.css" />


<div class="conteneur">
    <div class="article">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @Html.LabelFor(model => model.MotDePasse)
            @Html.TextBoxFor(model => model.MotDePasse, new { @type = "password", @class = "textbox", placeholder = "Mot de Passe" })
            @Html.ValidationMessageFor(model => model.MotDePasse)


            @Html.LabelFor(model => model.Avatar)
            <input type="file" name="fileToUpload" />



            @Html.LabelFor(model => model.Description)
            @Html.TextBoxFor(model => model.Description, new { @class = "textbox", placeholder = "Description" })
            @Html.ValidationMessageFor(model => model.Description)


            @Html.HiddenFor(m => m.AdherentId)
            @Html.HiddenFor(m => m.Mail)
            @Html.HiddenFor(m => m.Role)


            <!-- Submit Button-->
            <button class="valider" type="submit">Modifier</button>
        }


        <h3>Coordonnées banquaires</h3>
        <button class="valider">@Html.ActionLink("Modifier les coordonnées banquaire", "ModifierCarte", "ProfilUser", new { id = Model.AdherentId })</button>

        <br />
        @if (Model.Role.Equals("Consumer"))
        {
            <button class="valider">@Html.ActionLink("Retour au profil", "ProfilConsumer", "ProfilUser", new { id = Model.AdherentId })</button>
        }
        else
        {
            <button class="valider">@Html.ActionLink("Retour au profil", "ProfilProvider", "ProfilUser", new { id = Model.AdherentId })</button>
        }
    </div>
    <br />


</div>
    



