@model TakoLeaf.Models.Adherent
@{
    Layout = "_Layout";
    ViewBag.Title = "Profil";
}


    <div class="container">
        @using (Html.BeginForm())
        {
        
            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control", placeholder = "Prenom" })
                @Html.LabelFor(model => model.Prenom)
                @Html.ValidationMessageFor(model => model.Prenom)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Nom, new { @class = "form-control", placeholder = "Nom" })
                @Html.LabelFor(model => model.Nom)
                @Html.ValidationMessageFor(model => model.Nom)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Date_naissance, new { @type = "date", @class = "form-control" })
                @Html.LabelFor(model => model.Date_naissance)
                @Html.ValidationMessageFor(model => model.Date_naissance)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adresse.Rue, new { @class = "form-control", placeholder = "Adresse" })
                @Html.LabelFor(model => model.Adresse.Rue)
                @Html.ValidationMessageFor(model => model.Adresse.Rue)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adresse.CodePostal, new { @class = "form-control", placeholder = "Adresse" })
                @Html.LabelFor(model => model.Adresse.CodePostal)
                @Html.ValidationMessageFor(model => model.Adresse.CodePostal)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adresse.Ville, new { @class = "form-control", placeholder = "Adresse" })
                @Html.LabelFor(model => model.Adresse.Ville)
                @Html.ValidationMessageFor(model => model.Adresse.Ville)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Telephone, new { @type = "tel", @class = "form-control", placeholder = "Téléphone" })
                @Html.LabelFor(model => model.Telephone)
                @Html.ValidationMessageFor(model => model.Telephone)
            </div>

            @Html.HiddenFor(model => model.Adresse.Id)
            @Html.HiddenFor(model => model.AdresseId)
            <!-- Submit Button-->
            <button class="btn btn-primary btn-xl" type="submit">Modifier</button>




        
           
        }
    </div>
  