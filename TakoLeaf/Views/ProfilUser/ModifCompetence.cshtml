@model List<TakoLeaf.Models.Competence>
@{
    Layout = "_Layout";
    ViewBag.Title = "Modification Competence";
}

    <h2> Modification des Competences</h2>
    <div>
        @using (Html.BeginForm())
        {<table border="1">
                <tr>
                    <th>Competence</th>
                    <th>Tarif Horaires</th>
                    <th>Supprimer</th>

                </tr>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].NomSsCate </td>
                        <td>@Html.TextBoxFor(m => m[i].TarifHoraire) </td>
                        <td><button>@Html.ActionLink("Supprimer la competence", "SupprimerCompetence", "ProfilUser", new { id = Model[i].Id })</button></td>
                    </tr>

                    <div>
                        @Html.HiddenFor(m => Model[i].Id)
                        @Html.HiddenFor(m => Model[i].SsCateCompetenceId)
                        @Html.HiddenFor(m => Model[i].ProviderId)
                        @Html.HiddenFor(m => Model[i].Provider.Adherent.Id)
                    </div>


                }


            </table>
            <br />
            <button class="btn btn-primary btn-xl" type="submit">Modifier</button>
        }

        

    </div>
   

