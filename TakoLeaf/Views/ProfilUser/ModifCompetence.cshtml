@model List<TakoLeaf.Models.Competence>
@{
    Layout = "_LayoutConnecte";
    ViewBag.Title = "Modification Competence";
}

<link rel="stylesheet" href="~/CSS/Zoutils.css" />

    <h2 class="text-center"> Modification des Competences</h2>
    <div class="container">
        @using (Html.BeginForm())
        {<table border="1">
                <tr>
                    <th>Competence</th>
                    <th>Tarif Horaires</th>
                    <th>Supprimer</th>

                </tr>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].NomSsCate </td>
                        <td>@Html.TextBoxFor(m => m[i].TarifHoraire, new { @class = "textbox" }) </td>
                        <td><button class="supprimer" style="font-size : 12px; width : 100px" >@Html.ActionLink("Supprimer la competence", "SupprimerCompetence", "ProfilUser", new { id = Model[i].Id })</button></td>
                    </tr>

                    <div>
                        @Html.HiddenFor(m => Model[i].Id)
                        @Html.HiddenFor(m => Model[i].SsCateCompetenceId)
                        @Html.HiddenFor(m => Model[i].ProviderId)
                        @Html.HiddenFor(m => Model[i].Provider.Adherent.Id)
                    </div>


                }


            </table>
            <br />
            <button class="valider" type="submit">Modifier</button>
        }

        

    </div>
   

