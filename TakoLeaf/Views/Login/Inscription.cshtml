@model TakoLeaf.ViewModels.UtilisateurViewModel
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inscription</title>
</head>
<body>
    <div>
        @using (Html.BeginForm(null,null, FormMethod.Post,new {enctype = "multipart/form-data"}))
        {
            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adherent.Prenom, new { @class = "form-control", placeholder = "Prenom" })
                @Html.LabelFor(model => model.Adherent.Prenom)
                @Html.ValidationMessageFor(model => model.Adherent.Prenom)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adherent.Nom, new { @class = "form-control", placeholder = "Nom" })
                @Html.LabelFor(model => model.Adherent.Nom)
                @Html.ValidationMessageFor(model => model.Adherent.Nom)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adherent.Date_naissance, new { @type = "date", @class = "form-control" })
                @Html.LabelFor(model => model.Adherent.Date_naissance)
                @Html.ValidationMessageFor(model => model.Adherent.Date_naissance)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adherent.Adresse.Rue, new { @class = "form-control", placeholder = "Adresse" })
                @Html.LabelFor(model => model.Adherent.Adresse.Rue)
                @Html.ValidationMessageFor(model => model.Adherent.Adresse.Rue)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adherent.Adresse.CodePostal, new { @class = "form-control", placeholder = "Adresse" })
                @Html.LabelFor(model => model.Adherent.Adresse.CodePostal)
                @Html.ValidationMessageFor(model => model.Adherent.Adresse.CodePostal)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adherent.Adresse.Ville, new { @class = "form-control", placeholder = "Adresse" })
                @Html.LabelFor(model => model.Adherent.Adresse.Ville)
                @Html.ValidationMessageFor(model => model.Adherent.Adresse.Ville)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.Adherent.Telephone, new { @type = "tel", @class = "form-control", placeholder = "Téléphone" })
                @Html.LabelFor(model => model.Adherent.Telephone)
                @Html.ValidationMessageFor(model => model.Adherent.Telephone)
            </div>


            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.CompteUser.Mail, new { @type = "email", @class = "form-control", placeholder = "Email" })
                @Html.LabelFor(model => model.CompteUser.Mail)
                @Html.ValidationMessageFor(model => model.CompteUser.Mail)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.CompteUser.MotDePasse, new { @type = "password", @class = "form-control", placeholder = "Mot de Passe" })
                @Html.LabelFor(model => model.CompteUser.MotDePasse)
                @Html.ValidationMessageFor(model => model.CompteUser.MotDePasse)
            </div>

            <div class="form-floating mb-3">
                <input type="file" name="fileToUpload" />
                @Html.LabelFor(model => model.CompteUser.Avatar)
            </div>

            <div class="form-floating mb-3">
                @Html.TextBoxFor(model => model.CompteUser.Description, new { @class = "form-control", placeholder = "Description" })
                @Html.LabelFor(model => model.CompteUser.Description)
                @Html.ValidationMessageFor(model => model.CompteUser.Description)
            </div>

            <div>

                @Html.DropDownListFor(model => model.CompteUser.Role, (SelectList)ViewBag.Roles)
                @Html.LabelFor(model => model.CompteUser.Role)

            </div>

            <!-- Submit Button-->
            <button class="btn btn-primary btn-xl" type="submit">Valider</button>
        }
</div>
</body>
</html>
