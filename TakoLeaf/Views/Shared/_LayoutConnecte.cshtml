<body>







    <!--Début Section du Header-->
    <section>
        <header>
            <button class="hamburger">&#9776;</button>
            <button class="cross">&#735;</button>
            <div class="logo"><img src="~/IMG/TAKO ECO new.png"></div>
            <h1 class="titremidheader">Tako Leaf</h1>
        </header>

        <div class="menu">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Actualites", "Home")">Fil d'actu</a></li>
                @if (!User.Identity.IsAuthenticated)
                 {
                    <li><a href="@Url.Action("Inscription", "Login")">Inscription</a></li>
                    <li><a href="@Url.Action("Connexion", "Login")">Connexion</a></li>
                 }
                else
                {
                    <li><a href="@Url.Action("VoirProfil", "ProfilUser")">Profil</a></li>
                    <li><a href="@Url.Action("MessagesRecus", "Messagerie")">Messagerie</a></li>
                    <li><a href="@Url.Action("Sujets", "Forum")">Forum</a></li>
                    <li><a href="@Url.Action("Deconnexion", "Login")">Deconnexion</a></li>
                }

                @if (User.IsInRole("Admin"))
                 {
                    <a href="/Admin/GestionComptes">Espace Admin</a>
                 }
                 <li><a href="@Url.Action("Recherche", "Recherche")">Recherche</a></li>
                 <li><a href="#">FAQ</a></li>
            </ul>
        </div>

    </section>


    <!--FIn Section du Header-->

    <section id="contenu" class="PAGEMID">
        @RenderBody()
    </section>











    <!--Section footer-->

    <section class="footerBot">
        <footer class="footer-items">
            <div class="container">
                <div class="footer-contact">
                    <h3> Nous rencontrer</h3>
                    <ul>
                        <li>Adresse</li>
                        <li>Adresse</li>
                        <li>Adresse</li>
                        <li>Telephone: XX.XX.XX.XX.XX</li>
                    </ul>
                </div>
                <div class="footer-infos">
                    <h3> Tako Leaf</h3>
                    <ul>
                        <li><a href="#section-home">Notre Projet</a></li>
                        <li><a href="#section-information">Comment ça marche ?</a></li>
                    </ul>
                </div>
                <div class="footer-questions">
                    <h3> Besoin d'aide ?</h3>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Forum</a></li>
                        <li><a href="#">Contacter Administrateur</a></li>
                    </ul>
                </div>
            </div>

            <div class="imageRS">

                <a href=""><img src="~/IMG/RS/entypo-social_instagram-with-circle.png" alt="" class="instagram"></a>
                <a href=""><img src="~/IMG/RS/Vector-1.png" alt="" class="twitter"></a>
                <a href=""><img src="~/IMG/RS/Vector.png" alt="" class="facebook"></a>
